<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookHub" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.BookHub.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorPrimaryDark</item>
        <item name="postSplashScreenTheme">@style/Theme.BookHub</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_2</item>
        <item name="splashScreenIconSize">200dp</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/bookhub_text</item>
    </style>


</resources>